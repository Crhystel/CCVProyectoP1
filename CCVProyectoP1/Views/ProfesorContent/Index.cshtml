@model IEnumerable<CCVProyectoP1.Models.Clase>

<h1>Clases del Profesor</h1>

@if (Model != null && Model.Any())
{
    <ul>
        @foreach (var clase in Model)
        {
            <li>
                @clase.CNombre -Grado: @clase.Grado
                <a asp-controller="Actividades" asp-action="Index" asp-route-claseId="@clase.Id" class="btn btn-primary">
                    Gestionar Clase
                </a>
            </li>
        }
    </ul>
}
else
{
    <p>No tienes clases asignadas actualmente.</p>
}
