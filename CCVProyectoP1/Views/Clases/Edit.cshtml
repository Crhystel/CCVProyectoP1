@model CCVProyectoP1.Models.Clase

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Clase</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="CNombre" class="control-label"></label>
                <select asp-for="CNombre" class="form-control" asp-items="ViewBag.Clases" id="ClaseSelect" onchange="cargarProfesoresPorClase()">
                    <option value=""></option>
                </select>
                <span asp-validation-for="CNombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Grado" class="control-label"></label>
                <select asp-for="Grado" class="form-control" asp-items="ViewBag.Grado" >
                    <option value=""></option>
                </select>
                <span asp-validation-for="Grado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdProfesor" class="control-label"></label>
                <select asp-for="IdProfesor" class="form-control" id="ProfesorSelect"></select>
                <span asp-validation-for="IdProfesor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/site.js"></script>
}
