@model IEnumerable<CCVProyectoP1.Models.Clase>

@{
    ViewData["Title"] = "Clase";
}

<h1>Clases</h1>

<p>
    <a class="btn btn-primary float-right" asp-action="Create">Añadir Clase</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CNombre)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Profesor)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CNombre)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Profesor.Nombre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalles</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="d-grid gap-2 col-6 mx-auto">
    <button class="btn btn-dark" type="button" onclick="window.location.href='http://localhost:5190/Administrador/Index'">Regresar</button>
</div>
