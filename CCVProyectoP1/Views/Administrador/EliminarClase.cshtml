@model CCVProyecto1._1.Models.Clase

<h2>Eliminar Clase</h2>

<p>¿Estás seguro que deseas eliminar esta clase?</p>

<div>
    <strong>Nombre de la Clase:</strong> @Model.Nombre
</div>

<form asp-action="EliminarClase" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="ListaClases" class="btn btn-secondary">Cancelar</a>
</form>
